// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Dish {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       String
  createdAt   DateTime @default(now())
  ingredients String[]
}
